{% extends 'base.html.twig' %}
{% block title %}Subscription{% endblock %}
{% block stylesheets %}
    {{ parent() }}
{% endblock %}
{% block body %}
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">Mes abonnements</h1>
    </div>

<div class="container">
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
        <div class="list-group" style="padding: 20px;">
            {% for subscription in subscriptions %}
                <a href="{{ path('bookByAuthor', {authorId: subscription.id}) }}" class="list-group-item list-group-item-action">{{ subscription.name }}</a>
            {% endfor %}
        </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4"></div>
        <a href="{{ path('post_subscription') }}" style="padding: 40px;">
            <button type="button" class="btn btn-pink btn-lg">Ajouter un nouvel abonnement</button>
        </a>
    </div>
</div>

{% endblock %}
